<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6BCFFB"
    android:orientation="vertical"
    tools:context=".gamePlay" >

    <TextView
        android:id="@+id/textComp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="#fff"
        android:fontFamily="sans-serif-smallcaps"
        android:paddingStart="20dp"
        android:text="Computer"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/computerImage"
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:paddingStart="20dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="you"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/playerImage"
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:layout_marginTop="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-smallcaps"
            android:paddingStart="8dp"
            android:text="you :"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/playerPoints"
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Text"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textColor="#fff"
            android:fontFamily="sans-serif-smallcaps"
            android:text="computer :"
            android:textIsSelectable="false"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/computerPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Text"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/RockButton"
            android:layout_width="139dp"
            android:layout_height="118dp"
            android:background="@drawable/rock"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/paperButton"
            android:layout_width="139dp"
            android:layout_height="131dp"
            android:background="@drawable/paper"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/scissorsButton"
            android:layout_width="139dp"
            android:layout_height="123dp"
            android:background="@drawable/scissors"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>
</LinearLayout>
